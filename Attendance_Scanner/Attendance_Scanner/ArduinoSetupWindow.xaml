<Window x:Class="Attendance_Scanner.ArduinoSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Attendance_Scanner"
        mc:Ignorable="d"
        Title="ArduinoSetupWindow" Height="167" Width="224">
    <Grid>
        <Label Content="Arduino Setup" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <ComboBox x:Name="COMBOX_Ports" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BTN_Refresh" Content="Refresh" HorizontalAlignment="Left" Margin="135,49,0,0" VerticalAlignment="Top" Width="53" Click="BTN_Refresh_Click"/>
        <Button x:Name="BTN_Connect" Content="Connect" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="75" Click="BTN_Connect_Click"/>
        <Label Content="Last UID read:" HorizontalAlignment="Left" Margin="10,102,0,-5.333" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>
        <Label x:Name="LBL_LastRead" Content="" HorizontalAlignment="Left" Margin="98,102,0,-5.333" VerticalAlignment="Top"/>

    </Grid>
</Window>
